<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.TodoDetailsActivity"
    android:background="@color/black_details_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/todoTitleTv"
            android:textColor="@color/yellow_text"
            android:textSize="24sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendar_symbol"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add date/time"
                android:id="@+id/todoDateTv"
                android:contentDescription="add date/time text view"
                android:textColor="@color/yellow_text"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum_example"
            android:textSize="24sp"
            android:contentDescription="todo description"
            android:id="@+id/todoDescriptionTv"
            android:textColor="@color/yellow_text"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="20dp"
        android:weightSum="100"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/trash_icon"
            android:id="@+id/totoDeleteIBtn"
            android:contentDescription="delete todo button"
            android:backgroundTint="@color/black"
            android:layout_weight="10"
            />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/edit_pen_icon"
            android:id="@+id/todoEditIBtn"
            android:contentDescription="edit todo button"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/black"
            android:layout_weight="10"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mark complete"
            android:contentDescription="mark as complete todo button"
            android:id="@+id/todoMarkAsDoneBtn"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/yellow_text"
            android:layout_weight="30"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>